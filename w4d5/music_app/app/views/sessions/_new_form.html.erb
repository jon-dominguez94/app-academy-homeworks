<% if action == :signup %>

<form action="<%= users_url %>" method="post">
  <%= auth_token %>
  <h1>Create an account</h1>
  <label>Email:
    <input type="text" name="user[email]" value="">
  </label>
  <br>
  <label>Password:
    <input type="password" name="user[password]" value="">
  </label>
  <br>
  <input type="submit" name="" value="Create account">
</form>
